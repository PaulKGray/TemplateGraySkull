									{

									<li class="LoginLink">@Html.ActionLink("Log out","Logout","Account")</li>

									}
									else { 
          

          
									<li class="LoginLink">@Html.ActionLink("Login", "Login", "Account")</li>
									<li class="LoginLink">@Html.ActionLink("Register", "Register", "Account")</li>
				
	
          
                        
									}

