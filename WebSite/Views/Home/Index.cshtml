@model Template.Models.HomeModel

<h1>The Template Site</h1>

<p class="bigText">This template site from GrayBear is designed to allow you to get your ideas to market fast.</p>

 <p>The concept of data on this site is simple there is a parent item with child item.</p>

   
@using (Html.BeginForm("Index","Home", FormMethod.Post))
{

    @Html.ValidationSummary(true)
    
 <section class="ArticleSection">
	
	@for (var i = 0; i < Model.ParentItems.Count(); i++)
    {

     
       <article class="standardarticle" >    
				 <header>
					 @Model.ParentItems[i].Name
				 </header>
                <div class="content">
					 Will be desciption

                    @if (Model.ParentItems[i].ChildItems.Count() > 0) { 
                    
                    <ul>
                    @foreach (var item in @Model.ParentItems[i].ChildItems)
                    {
                      <li> @item.Name </li>
                    }
                    </ul>
                    }
                        


   
                </div>
				 <footer>
					@Html.ActionLink("View Item","ParentItemDetails", new { ID = Model.ParentItems[0].ParentItemid}, null)
				 </footer>
       </article> 
       
    }
</section>
        
    <p>This is a cheat at the moment</p>
    
    
}


